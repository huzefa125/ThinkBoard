{
  "name": "thinkboard",
  "version": "1.0.0",
  "description": "Fullstack notes app with Express backend and React (Vite) frontend",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend/thinkbook",
    "build": "npm run install:all && npm run build --prefix frontend/thinkbook",
    "start:backend": "npm start --prefix backend",
    "start:frontend": "npm run dev --prefix frontend/thinkbook",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start": "npm run start:backend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huzefa125/ThinkBoard.git"
  },
  "keywords": [
    "express",
    "react",
    "notes",
    "thinkboard"
  ],
  "author": "Your Name",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/huzefa125/ThinkBoard/issues"
  },
  "homepage": "https://github.com/huzefa125/ThinkBoard#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
